<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCrearConvocatoria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 📍 Lugar del partido -->
    <EditText
        android:id="@+id/etLugar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="📍 Lugar del partido"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 🏠 Equipo local -->
    <TextView
        android:id="@+id/tvEquipoLocal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del equipo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/etLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 👊 Equipo rival -->
    <EditText
        android:id="@+id/etEquipoRival"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="👊 Equipo rival"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvEquipoLocal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 📆 Fecha del partido -->
    <TextView
        android:id="@+id/tvFechaSeleccionada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="📆 Fecha del partido"
        android:padding="12dp"
        android:background="#F0F0F0"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/etEquipoRival"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ⏰ Hora del partido -->
    <Button
        android:id="@+id/btnHoraPartido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="⏰ Hora del partido"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvFechaSeleccionada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 🕓 Hora de quedada -->
    <Button
        android:id="@+id/btnHoraQuedada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🕓 Hora de quedada"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnHoraPartido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ✅ Botón guardar -->
    <Button
        android:id="@+id/btnGuardarConvocatoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✅ Guardar convocatoria"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnHoraQuedada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
