<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unirse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".UnirseEquipoActivity"
    android:padding="16dp">
    <!-- Fondo gris del recuadro -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D9D9D9"
        android:padding="24dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloUnirse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unirse a equipo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Campo de texto para código de grupo -->
        <EditText
            android:id="@+id/etCodigoGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código del grupo"
            android:textColorHint="#000000"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Botón Unirse -->
        <Button
            android:id="@+id/btnUnirseEquipo"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FF6347"
            android:text="Unirse"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="unirseAEquipo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>